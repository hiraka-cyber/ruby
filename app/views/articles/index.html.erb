<div class="container">
  <div class="row">
    <%= link_to 'New article',new_article_path,class:'btn btn-outline-primary mt-1' %>
    <div class="col-md-12">

      <table>
        <tr>
          <th>Title</th>
          <th>Text</th>
          <th></th>
        </tr>
        <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.text %></td>
          <td><%= link_to 'Show',article_path(article),class:'btn btn-outline-primary' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
